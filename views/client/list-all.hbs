<h2>Client list</h2>
<table>
  <thead>
    <tr>
      <th>
        E-mail
      </th>
      <th>
        Name
      </th>
      <th>
        Date of next contact
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each clients}}
      <tr>
        <th>
          <a href='mailto:{{this.id}}' target='_blank'>{{this.mail}}</a>
        </th>
        <td>
          <a href='/client/{{this.id}}'>{{this.name}}</a>
        </td>
        <td>
          {{this.nextContactAt}}
        </td>
        <td>
          <a href='/client/{{this.id}}'>Details</a>
          <form
            method='post'
            action='/client/{{this.id}}?_method=DELETE'
          ><button type='submit'>Delete</button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>